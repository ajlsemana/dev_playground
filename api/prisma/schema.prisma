generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String
  email     String
  country   String
  riskScore Int

  loans     Loan[]
  cases     Case[]
}

model Loan {
  id          Int     @id @default(autoincrement())
  customerId  Int
  principal   Float
  outstanding Float
  dueDate     DateTime
  status      String

  customer Customer @relation(fields: [customerId], references: [id])
  cases    Case[]
}

model Case {
  id         Int      @id @default(autoincrement())
  customerId Int
  loanId     Int
  dpd        Int
  stage      String
  status     String
  assignedTo String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  customer Customer @relation(fields: [customerId], references: [id])
  loan     Loan     @relation(fields: [loanId], references: [id])

  actions       ActionLog[]
  ruleDecisions RuleDecision[]

  @@index([status, stage, dpd])
  @@index([assignedTo])
}

model ActionLog {
  id        Int      @id @default(autoincrement())
  caseId    Int
  type      String
  outcome   String
  notes     String
  createdAt DateTime @default(now())

  case Case @relation(fields: [caseId], references: [id])

  @@index([caseId, createdAt])
}

model RuleDecision {
  id           Int      @id @default(autoincrement())
  caseId       Int
  matchedRules Json
  reason       String
  createdAt    DateTime @default(now())

  case Case @relation(fields: [caseId], references: [id])
}